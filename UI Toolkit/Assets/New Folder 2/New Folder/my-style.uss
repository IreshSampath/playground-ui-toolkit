.button-blue {
    color: rgb(255, 255, 255);
    background-color: rgb(0, 142, 255);
    border-top-left-radius: 22px;
    border-top-right-radius: 22px;
    border-bottom-right-radius: 22px;
    border-bottom-left-radius: 22px;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    width: 100%;
    height: 60px;
    align-items: center;
    max-width: 600px;
    max-height: 75px;
    min-width: 119px;
    min-height: 62px;
    align-self: center;
    align-content: auto;
    margin-left: 10px;
    padding-right: 10px;
    margin-right: 10px;
    padding-left: 10px;
    transition-timing-function: ease-out;
    transition-duration: 0.1s;
}

.button-blue:hover {
    scale: 1.05 1.05;
}

.button-blue:active {
    background-color: rgb(0, 224, 255);
}

.text-title {
    font-size: 52px;
    -unity-text-align: upper-center;
    padding-top: 20px;
    -unity-font-style: bold;
}

.text-paragraph {
    font-size: 22px;
    flex-wrap: nowrap;
    white-space: normal;
    padding-left: 14px;
    padding-right: 14px;
    padding-bottom: 14px;
    padding-top: 14px;
    text-overflow: clip;
    -unity-font-style: italic;
    letter-spacing: 4px;
    word-spacing: 57px;
}

.charactor-out {
    translate: -400px -400px;
    width: 200px;
    height: 300px;
    background-image: url("project://database/Assets/New%20Folder%202/New%20Folder/Hyperspace%20-%20Floating.png?fileID=2800000&guid=f452b57474c6b8b48a1b5d740e493e9a&type=3#Hyperspace - Floating");
    transition-duration: 3s;
}

.charactor-in {
    background-image: url("project://database/Assets/New%20Folder%202/New%20Folder/Hyperspace%20-%20Floating.png?fileID=2800000&guid=f452b57474c6b8b48a1b5d740e493e9a&type=3#Hyperspace - Floating");
    width: 200px;
    height: 300px;
    transition-duration: 3s;
    transition-timing-function: ease-in-cubic;
    flex-grow: 0;
}

.dark-fade-out {
    opacity: 0;
    flex-grow: 1;
}

.dark-fade-in {
    opacity: 1;
    transition-duration: 0.5s;
    background-color: rgba(0, 0, 0, 0.74);
}

.bottom-sheet-down {
    transition-duration: 0.25s;
    width: 100%;
    height: 50%;
    background-color: rgb(255, 255, 255);
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    translate: 0 100%;
    transition-timing-function: ease-in-out-bounce;
}

.bottom-sheet-up {
    translate: 0 0;
}
